

@page
@model FilmesCRUDRazor.Pages.Filmes.IndexModel
@{
ViewData["Title"] = "Index";
}
@{
Layout = "_Layout";
}
<div class="container">
   <div class="row">
      <div class="col-md-12">
         <p>
            <a class= "btn btn-outline-primary" asp-page="Create">
            <span></span>Adicionar Filme
            </a>
         </p>
         <hr>
         <form>
            <div class="row">
               <div class="col-md-6">
                  <label class="text-left"><b>Gêneros</b></label>
                  <select class="form-control" asp-for="FilmePorGenero" asp-items="Model.Generos">
                     <option value="">Todos - Gêneros</option>
                  </select>
               </div>
            </div>
            <br>
            <div class="row">
               <div class="col-md-6">
                  <label class="text-left"><b>Título do Filme</b></label>
                  <input class="form-control" type="text" name="BuscarPorGeneroNome">
                  <br>
                  <input class="btn btn-outline-primary" type="submit" value="Filtrar" >
               </div>
            </div>
         </form>
         <div class="table table-striped">
            <table class="table">
               <thead>
                  <tr>
                     <th class="text-center">
                        @Html.DisplayNameFor(model => model.Filme[0].Titulo)
                     </th>
                     <th class="text-center">
                        @Html.DisplayNameFor(model => model.Filme[0].DataLancamento)
                     </th>
                     <th class="text-center">
                        @Html.DisplayNameFor(model => model.Filme[0].Genero)
                     </th>
                     <th class="text-center">
                        @Html.DisplayNameFor(model => model.Filme[0].Preco)
                     </th>
                     <th class="text-center">Ações</th>
                  </tr>
               </thead>
               <tbody>
                  @foreach (var item in Model.Filme)
                  {
                  <tr>
                     <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Titulo)
                     </td>
                     <td class="text-center">
                        @Html.DisplayFor(modelItem => item.DataLancamento)
                     </td>
                     <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Genero)
                     </td>
                     <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Preco)
                     </td>
                     <td class="text-center">
                        <a class="btn btn-outline-warning" asp-page="./Edit" asp-route-id="@item.FilmeId"><span>Editar</span></a> 
                        <a class="btn btn-outline-info" asp-page="./Details" asp-route-id="@item.FilmeId"><span></span>Detalhes</a> 
                        <a class="btn btn-outline-danger" asp-page="./Delete" asp-route-id="@item.FilmeId"><span></span>Deletar</a>
                     </td>
                  </tr>
                  }
               </tbody>
            </table>
            <div class"clearfix">
               <nav aria-label="Page navigation example">
                  <ul class="pagination justify-content-end">
                     <a class="page-link" href="#" aria-label="Previous">
                     <span aria-hidden="true">&laquo;</span>
                     <span class="sr-only">Previous</span>
                     </a>    
                     </li>
                     <li class="page-item"><a class="page-link" href="#">1</a></li>
                     <li class="page-item"><a class="page-link" href="#">2</a></li>
                     <li class="page-item"><a class="page-link" href="#">3</a></li>
                     <li class="page-item"><a class="page-link" href="#">4</a></li>
                     <li class="page-item"><a class="page-link" href="#">5</a></li>
                     <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                        </a>        
                  </ul>
               </nav>
            </div>
         </div>
      </div>

